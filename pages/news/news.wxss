}


/*新闻列表*/
.item{
    padding: 8px 0;
    border-bottom: 1px dashed #eee;
}
.item::after{
    content:"";
    clear:both;
    position:absoult;
    height:0;
}
.item:last-child{
    border-bottom: none;
}
.left{
    float:left;
    width: 67%;
    height: 60px;
    position:relative;
}
.title{
  text-align: left;
    font-size:12px;
    font-family:"微软雅黑";
}
.sub_title{
    position:absolute;
    left: 0;
    bottom: 0;
}
.sub_title text{
    color:#aaa;
    padding-right : 5px;
    font-size : 12px;
}
.right{
    float:right;
    width: 30%;
}
.right image{
    width: 100%;
    height: 60px;
    display: block;
}