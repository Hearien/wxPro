.wrapper{
  background-color:gainsboro;
  font-family: "微软雅黑";
  position: relative;
}
.head{
  position:static;
  top:0;
  z-index: 999;
}
.arrow{
  font-size: 20px;
  line-height: 20px;
  display: inline-block;
  margin: 0 25px;
  width:17px;
}
.arrow:first-of-type{
  float: left;
  margin: 15px 25px;
}
.arrow:last-of-type{
  float:right;
  margin: 15px 25px;
}
.clear{
  clear: both;
}
.userinfo{
  margin-left: 0;
  margin-top: 0;
}
.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx;
  border-radius: 50%;
  display: inline-block;
}
.username{
  color:blue;
  font-family: "微软雅黑";
  vertical-align: middle;
  margin-top: -42px;
  display: inline-block;
}
.divSearch{
  width:95%;
  background-color:azure;
  border: 1px #aaa solid;
  border-radius: 5px;
  margin: auto auto;
}

.search{
  float:left;
  line-height:11px;
  padding:5px;
}

/*tab选项卡样式*/
.swiper-tab{  
    width: 100%;  
    border-bottom: 2rpx solid #eeeeee;  
    text-align: center;  
    line-height: 80rpx;}  
.swiper-tab-item{  font-size: 30rpx;  
    display: inline-block;  
    width: 33.33%;  
    color: #666666;  
}  
.on{ color: #f10b2e;  
    border-bottom: 5rpx solid #f10b2e;}  

.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }  
swiper-item{overflow: auto;} 
/*****end*****/

.goodsList{
  width: 99%;
  margin: auto auto;
   box-sizing: border-box;
   flex-direction: column;
}

.goods{
  width: 46%;
  text-align: left;
  background-color:azure;
  margin: 5px 5px;
  display: inline-block;
}

.goodsName{
  font-size: 14px;
}

.contact{
  display: block;
  font-size: 13px;
}

.price{
  display: block;
  font-family: Verdana;
  color: #e4393c;
  font-size: 20px;
}

.userimg{
  width: 90%;
  height: 110px;
  display: inline-block;
  margin:auto 5%;
  margin-top: 5px; 
}